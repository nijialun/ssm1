  <title>滚动</title>
  <style>
  #div1 ul li {
     width:200px;
	 height:200px;
	 background:red;
	 position:absolute;left;0；top:50px;
  }
  </style>
  <script>
  setInterval(function (){
     var oDiv=document.getElementById('div1');
     oDiv.style.left=oDiv.offsetLeft+10+'px';  
  },30);
  
  
  </script>
 </head>
 <body>
  <div id="div1">
   <ul>
     <li>
	 <img src="images/4.jpg" width:200px;
	 height:200px;/>
     </li>
   </ul>
  </div>
 </body>
